{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["ES2019"],
    "jsx": "react-jsx",

    "rootDir": "./src",
    "outDir": "./dist",

    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "skipLibCheck": true,

    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
